<p id="notice"><%= notice %></p>

<h5>Bahnen</h5>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alleys.each do |alley| %>
      <tr>
        <td><%= alley.name %></td>
        <td><%= link_to 'Zeigen', [:admin, alley] %></td>
        <td><%= link_to 'Bearbeiten', edit_admin_alley_path(alley) %></td>
        <td><%= link_to 'Löschen', [:admin, alley], method: :delete, data: { confirm: 'Wirklich löschen?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

